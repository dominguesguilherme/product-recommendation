{
    "name": "dominguesguilherme/product-recommendation",
    "description": "Product Recommendation PHP FPM + Symfony project.",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ramsey/uuid": "^4.0",
        "doctrine/annotations": "^1.11",
        "symfony/console": "5.4.*",
        "symfony/dotenv": "5.4.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.4.*",
        "symfony/property-access": "5.4.*",
        "symfony/property-info": "5.4.*",
        "symfony/serializer": "5.4.*",
        "symfony/validator": "5.4.*",
        "symfony/yaml": "5.4.*"
        
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "ProductRecommendation\\": "src/"
        },
        "files": [
            "src/Kernel.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ProductRecommendation\\Tests\\": [
                "tests/unit",
                "tests/integration"
            ]
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "phpunit"
        ],
        "lint": [
            "phpcs",
            "phpstan analyse --memory-limit=-1",
            "psalm"            
        ],
        "lint-fix": [
            "phpcbf"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.4.*"
        },
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "require-dev": {
        "doctrine/coding-standard": "^8.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.77",
        "phpstan/phpstan-doctrine": "^0.12.32",
        "phpunit/phpunit": "^9",
        "psalm/plugin-phpunit": "^0.15.1",
        "psalm/plugin-symfony": "^2.1",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/browser-kit": "5.4.*",
        "symfony/phpunit-bridge": "5.4.*",
        "vimeo/psalm": "^4.6"
    }
}
